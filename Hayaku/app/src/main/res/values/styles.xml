<?xml version="1.0" encoding="utf-8"?>
<resources> <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"> <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_theme</item>
        <item name="colorPrimaryDark">@color/main_theme</item>
        <item name="colorAccent">@color/yellowish_green</item> <!-- No Title Bar-->
        <item name="android:statusBarColor">@color/main_theme</item>
        <item name="android:titleTextColor">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/main_theme</item>
        <item name="android:colorBackground">@color/main_theme</item>
        <item name="android:fontFamily">@font/maplestorylight</item>
        <item name="android:windowContentOverlay">@null</item>
    </style> <!-- Splash theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar"> <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_theme</item>
        <item name="colorPrimaryDark">@color/main_theme</item>
        <item name="colorAccent">@color/black</item> <!-- No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item> <!-- white status bar -->
        <item name="android:statusBarColor">@color/main_theme</item>
        <item name="android:windowLightStatusBar">true</item> <!-- background -->
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
</resources>
